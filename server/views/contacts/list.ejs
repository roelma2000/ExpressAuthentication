      <%- include ../partials/header %>
      <%- include ../partials/main_nav %>   
        
      <!--- Body Begins-->
         
      <section>
              <div class=" mt-2">
                <div class="container">
                  <div class="row">
                    <div >
                      <h5><%= title %></h5>
                      <% if(typeof displayName=="string" && displayName){%>
                        <p><a href="/contact-list/add" class="btn btn-primary" role="button">
                          <i class="fas fa-plus-circle"></i> Add Contacts </a></p>
                     <% }%>

                      <table class="table table-striped table-hover">
                        <thead class="thead-light">
                          <tr>
                            <th scope="col">Contact Name</th>
                            <th scope="col">Contact Number</th>
                            <th scope="col">Email</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(let cnt=0;cnt<ContactList.length;cnt++){ %>
                          <tr>
                            <td><%= ContactList[cnt].contactName%></td>
                            <td><%= ContactList[cnt].contactNum%></td>
                            <td><%= ContactList[cnt].emailAddr%></td>
                            <% if(typeof displayName=="string" && displayName){%>
                            <td>
                              <a href="/contact-list/edit/<%= ContactList[cnt]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td>
                              <a href="/contact-list/delete/<%= ContactList[cnt]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                            <% }%>
                          </tr>
                          <% } %>
                         
                        </tbody>
                      </table>
                    </div>
                    
                    <!---<div class="col-12 col-lg-6">
                      
                   </div>-->
                  <div><p>
                     <!---Last Row  -->
                      
                  </p></div>
                  </div>
                </div>
              </div>

            </section>
            
      <!--- Footer Begins-->
       <%- include ../partials/footer %> 